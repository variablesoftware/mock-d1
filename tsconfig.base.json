{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "types": [
      "vitest",
      "@cloudflare/workers-types",
      "node",
      "zod"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "tests",
    "dist",
    "node_modules"
  ]
}